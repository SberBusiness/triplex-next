{
    "name": "@sberbusiness/triplex-next",
    "version": "0.11.0",
    "description": "Библиотека компонентов дизайн-системы Triplex.",
    "author": "СберБизнес",
    "license": "Sber Public License at-nc-sa v.2",
    "repository": {
        "type": "git",
        "url": "git@github.com:SberBusiness/triplex-next.git"
    },
    "type": "module",
    "files": [
        "dist"
    ],
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "prepare": "husky",
        "prebuild": "npm run generateTokensTypes && npm run generateThemeCssVariables && tsc --noEmit",
        "build": "vite build",
        "postbuild": "node scripts/generate-package-json.js && node scripts/copyReadmeToDist.js && npm run copyLessHelpers",
        "storybook": "storybook dev -p 6006",
        "storybook:build": "npm run generateTokensTypes && npm run generateThemeCssVariables && storybook build",
        "storybook:serve": "npx http-server storybook-static -p 6007",
        "test-e2e": "playwright test",
        "test-unit": "vitest run",
        "test-unit:watch": "vitest --watch",
        "test-unit:coverage": "vitest run --coverage",
        "generateTokensTypes": "tsx scripts/generateRefTokensTypes.ts",
        "generateThemeCssVariables": "tsx scripts/generateCssFromDesignTokens.ts",
        "generateComponentTokensTemplate": "tsx scripts/generateComponentTokensTemplate.ts",
        "copyLessHelpers": "tsx scripts/copyLessHelpers.ts",
        "chromatic": "dotenv -e .env.local -- sh -c 'npx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN --build-script-name=storybook:build'",
        "deps:cycles": "madge src --circular"
    },
    "dependencies": {
        "@dnd-kit/core": "6.3.1",
        "@dnd-kit/modifiers": "9.0.0",
        "@dnd-kit/sortable": "10.0.0",
        "big.js": "7.0.1",
        "clsx": "2.1.1",
        "focus-trap-react": "10.3.0",
        "rc-util": "5.44.4",
        "react-resize-detector": "9.1.0",
        "react-text-mask": "5.5.0",
        "react-transition-group": "4.4.5",
        "react-window": "1.8.10"
    },
    "devDependencies": {
        "@eslint/js": "9.39.1",
        "@playwright/test": "1.55.1",
        "@sberbusiness/icons-next": "1.8.0",
        "@storybook/addon-docs": "9.1.15",
        "@storybook/addon-themes": "9.1.15",
        "@storybook/react-vite": "9.1.15",
        "@testing-library/react": "12.1.5",
        "@types/big.js": "6.2.2",
        "@types/lodash-es": "4.17.12",
        "@types/node": "18.19.130",
        "@types/react": "17.0.2",
        "@types/react-dom": "17.0.2",
        "@types/react-text-mask": "5.4.14",
        "@types/react-transition-group": "4.4.9",
        "@types/react-window": "1.8.8",
        "@vitejs/plugin-react": "4.6.0",
        "@vitest/coverage-v8": "3.2.4",
        "autoprefixer": "10.4.22",
        "chromatic": "13.1.2",
        "dotenv-cli": "9.0.0",
        "eslint": "9.39.1",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-prettier": "5.5.4",
        "eslint-plugin-react": "7.37.5",
        "eslint-plugin-react-hooks": "7.0.1",
        "glob": "10.5.0",
        "globals": "16.3.0",
        "http-server": "14.1.1",
        "husky": "9.1.7",
        "jsdom": "26.1.0",
        "less": "4.3.0",
        "lint-staged": "16.1.2",
        "lodash-es": "4.17.21",
        "madge": "8.0.0",
        "moment": "2.30.1",
        "playwright": "1.55.1",
        "prettier": "3.6.2",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "rollup-plugin-postcss": "4.0.2",
        "start-server-and-test": "2.0.12",
        "storybook": "9.1.15",
        "tsx": "4.20.3",
        "typescript": "5.8.3",
        "typescript-eslint": "8.46.4",
        "vite": "6.4.1",
        "vite-plugin-dts": "4.5.4",
        "vitest": "3.2.4"
    },
    "peerDependencies": {
        "@sberbusiness/icons-next": "^1.2.0",
        "moment": "^2.29.4",
        "react": "^16.8.0 || ^17.0.0",
        "react-dom": "^16.8.0 || ^17.0.0"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ]
    }
}
