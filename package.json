{
    "name": "@sberbusiness/triplex-next",
    "version": "0.1.0",
    "description": "Библиотека компонент дизайн-системы Triplex.",
    "author": "СберБизнес",
    "license": "Sber Public License at-nc-sa v.2",
    "repository": {
        "type": "git",
        "url": "https://github.com/SberBusiness/triplex-next.git"
    },
    "files": [
        "dist"
    ],
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "prebuild": "npm run generateTokensTypes && npm run generateThemeCssVariables && tsc --noEmit",
        "build": "vite build",
        "lint": "npx eslint .",
        "lint:fix": "npx eslint . --fix",
        "prepublishOnly": "npm run build && node scripts/generate-package-json.js",
        "storybook": "storybook dev -p 6006",
        "storybook:build": "npm run generateTokensTypes && npm run generateThemeCssVariables && storybook build",
        "storybook:serve": "npx http-server storybook-static -p 6007",
        "test-e2e": "playwright test",
        "test-unit": "vitest run",
        "test-unit:watch": "vitest --watch",
        "test-unit:coverage": "vitest run --coverage",
        "test-visual:loki-run": "loki test --port=6007",
        "test-visual:loki-update": "loki update --port=6007",
        "test-visual": "npm run storybook:build && start-server-and-test storybook:serve :6007 test-visual:loki-run",
        "test-visual:update": "npm run storybook:build && start-server-and-test storybook:serve :6007 test-visual:loki-update",
        "test-visual:gallery": "node scripts/generate-gallery.js",
        "test-visual:serve": "npx http-server .loki -l 6008",
        "generateTokensTypes": "ts-node --project tsconfig.tools.json scripts/generateRefTokensTypes.ts",
        "generateThemeCssVariables": "ts-node --project tsconfig.tools.json --require tsconfig-paths/register scripts/generateCssFromDesignTokens.ts",
        "generateComponentTokensTemplate": "ts-node --project tsconfig.tools.json scripts/generateComponentTokensTemplate.ts"
    },
    "dependencies": {
        "clsx": "2.1.1",
        "rc-util": "5.44.4"
    },
    "devDependencies": {
        "@eslint/js": "9.31.0",
        "@playwright/test": "1.54.1",
        "@storybook/addon-essentials": "8.6.14",
        "@storybook/addon-themes": "8.6.14",
        "@storybook/react-vite": "8.6.14",
        "@testing-library/dom": "10.4.0",
        "@testing-library/react": "16.3.0",
        "@types/lodash": "4.17.20",
        "@types/node": "18.19.99",
        "@types/react": "18.3.1",
        "@types/react-dom": "18.3.1",
        "@vitejs/plugin-react": "4.6.0",
        "@vitest/coverage-v8": "3.2.4",
        "autoprefixer": "10.4.21",
        "eslint": "9.31.0",
        "eslint-config-prettier": "10.1.5",
        "eslint-plugin-prettier": "5.5.1",
        "eslint-plugin-react": "7.37.5",
        "eslint-plugin-react-hooks": "5.2.0",
        "glob": "10.4.5",
        "globals": "16.3.0",
        "http-server": "14.1.1",
        "jsdom": "26.1.0",
        "less": "4.3.0",
        "lodash": "4.17.21",
        "loki": "0.35.1",
        "playwright": "1.54.1",
        "prettier": "3.6.2",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "rollup-plugin-postcss": "4.0.2",
        "start-server-and-test": "2.0.12",
        "storybook": "8.6.14",
        "storybook-dark-mode": "4.0.2",
        "ts-node": "10.9.2",
        "tsconfig-paths": "4.2.0",
        "typescript": "5.8.3",
        "typescript-eslint": "8.36.0",
        "vite": "6.3.5",
        "vite-plugin-dts": "4.5.4",
        "vitest": "3.2.4"
    },
    "peerDependencies": {
        "react": "^18.0.0",
        "react-dom": "^18.0.0"
    },
    "overrides": {
        "@react-native/dev-middleware": "0.80.0",
        "@vue/compiler-sfc": "3.5.16"
    }
}
